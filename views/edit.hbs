<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="card" style="width: 40rem">
      <div class="card-body">
        <div class="card-title mt-1">
          <i class="fas fa-donate fa-lg"> 編輯</i>
        </div>
        <hr>
        <div class="new-form">
          <form action="/records/{{ record._id }}?_method=PUT" method="POST">
            <div class="row mb-3">
              <label for="name" class="col-sm-2 col-form-label">名稱：</label>
              <div class="col-sm-10">
                <input type="name" name="name" class="form-control" value={{ record.name }}>
              </div>
            </div>
            <div class=" row mb-3">
              <label for="category" class="col-sm-2 col-form-label">類別：</label>
              <div class="col-sm-10">
                <select class="form-select" name="Category">
                  <option value="家居物業/fas fa-home" {{#if (eq record.category '家居物業' )}}selected{{/if}}>家居物業</option>
                  <option value="交通出行/fas fa-shuttle-van" {{#if (eq record.category '交通出行' )}}selected{{/if}}>交通出行
                  </option>
                  <option value="休閒娛樂/fas fa-grin-beam" {{#if (eq record.category '休閒娛樂' )}}selected{{/if}}>休閒娛樂
                  </option>
                  <option value="餐飲食品/fas fa-utensils" {{#if (eq record.category '餐飲食品' )}}selected{{/if}}>餐飲食品</option>
                  <option value="其他/fas fa-pen" {{#if (eq record.category '其他' )}}selected{{/if}}>其他</option>
                </select>
              </div>
            </div>
            <div class="row mb-3">
              <label for="date" class="col-sm-2 col-form-label">日期：</label>
              <div class="col-sm-10">
                <input type="date" name="date" class="form-control datepicker" value={{ record.date }}>
              </div>
            </div>
            <div class=" row mb-3">
              <label for="amount" class="col-sm-2 col-form-label">金額：</label>
              <div class="col-sm-10">
                <input type="amount" name="amount" class="form-control" value={{ record.amount }}>
              </div>
            </div>
            <div class="form-row">
              <div class="col d-flex justify-content-end">
                <div>
                  <button type="submit" class="btn btn-warning fw-bold">儲存</button>
                  <a class="btn btn-dark fw-bold" href="/">
                    返回
                  </a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>