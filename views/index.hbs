<div class="row justify-content-center mt-5">
  <div class="col-6">
    <form action="/records/filter" class="input-group">
      <select class="form-select" name="filter">
        <option value="all" selected>全部項目</option>
        <option value="家居物業" {{#if (eq filter '家居物業' )}} selected {{/if}}>家居物業</option>
        <option value="交通出行" {{#if (eq filter '交通出行' )}} selected {{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if (eq filter '休閒娛樂' )}} selected {{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if (eq filter '餐飲食品' )}} selected {{/if}}>餐飲食品</option>
        <option value="其他" {{#if (eq filter '其他' )}} selected {{/if}}>其他</option>
      </select>
      <button type="submit" class="btn btn-warning">查詢</button>
    </form>
  </div>
  <div class="col-10 mt-3">
    <h6>
      總金額
    </h6>
    <h1 class="d-flex justify-content-center">
      {{totalAmount}}
    </h1>
  </div>
  <div class="col-10 mt-3">
    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item bg-light">
        <div class="row">
          <div class="row col-8">
            <div class="col-2 d-flex align-items-center justify-content-center">
              <i class="{{this.categoryIcon}} fa-2x" style="color:#53e2e9"></i>
            </div>
            <div class="col-7">
              <h5 style="margin-bottom:0">{{this.name}}</h5>
              <small>{{this.date}}</small>
            </div>
            <div class="col-3 d-flex align-items-center justify-content-end">
              {{this.amount}}
            </div>
          </div>
          <div class="col-4 d-flex  align-items-center justify-content-end" style="padding:0">
            <div>
              <a class="btn btn-success fw-bold" href="./records/{{ this._id }}/edit">
                編輯
              </a>
              <form action="./records/{{ this._id }}/delete" method="POST" style="display: inline">
                <button type="submit" class="btn btn-danger fw-bold">刪除</button>
              </form>
            </div>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-10 mt-3">
    <div class="d-flex justify-content-center">
      <div class="d-grid col-5 mx-auto">
        <a class="btn btn-warning fw-bold mb-5" href="./records/new">新增支出</a>
      </div>
    </div>
  </div>
</div>